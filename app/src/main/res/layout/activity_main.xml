<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_app"
    tools:ignore="ExtraText">
    tools:context=".MainActivity">

    <!-- Indicador de status de Wi-Fi (imagem do Wi-Fi verde ou vermelho) -->

    <!-- GIF da torneira -->

    <!-- Botão Selecionar Dispositivo -->

    <!-- Botão Ligar -->

    <ImageView
        android:id="@+id/statusIndicator"
        android:layout_width="76dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/iconebtvermelho"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <!-- Botão Desligar -->

    <ImageView
        android:id="@+id/torneiraGif"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/statusIndicator"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/xdeerro"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="342dp"
        tools:ignore="ContentDescription,MissingConstraints"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/btnSelecionarDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torneiraGif"
        android:layout_centerHorizontal="true"
        android:text="Selecionar Dispositivo"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnLigar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSelecionarDispositivo"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="Ligar"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="202dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/btnDesligar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLigar"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="Desligar"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="202dp"
        tools:ignore="HardcodedText,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
